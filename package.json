{
  "name": "sf-monitor-monorepo",
  "version": "1.5.0",
  "description": "Salesforce monitoring toolkit - CLI and VS Code extension",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "clean": "npm run clean --workspaces",
    "cli:start": "npm run start --workspace=packages/cli",
    "vscode:compile": "npm run compile --workspace=packages/vscode",
    "vscode:watch": "npm run watch --workspace=packages/vscode",
    "vscode:package": "npm run package --workspace=packages/vscode"
  },
  "keywords": [
    "salesforce",
    "governor-limits",
    "monitoring",
    "cli",
    "vscode"
  ],
  "author": "sf-monitor Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/thedhanawada/sf-monitor.git"
  },
  "bugs": {
    "url": "https://github.com/thedhanawada/sf-monitor/issues"
  },
  "homepage": "https://github.com/thedhanawada/sf-monitor#readme",
  "devDependencies": {
    "lerna": "^8.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}